set nocompatible
set exrc

" ecoding
set encoding=utf-8

" number, scroll
set number
set scrolloff=3

" statusline
set laststatus=2
set statusline=%<%F\ %h%m%r\ %y%=%-14.(%l,%c%V%)\ %P

" vertical bar
set colorcolumn=+1
highlight ColorColumn ctermbg=lightgrey guibg=lightgrey

" highlighting
set incsearch hlsearch
nnoremap <silent> <ESC> :noh<CR><ESC>

" folding
set foldmethod=syntax

" autosave
let g:auto_save = 1
let g:auto_save_in_insert_mode = 0

" indentation
set tabstop=4 expandtab softtabstop=4
set wrap linebreak nolist textwidth=80
set autoindent
set shiftwidth=4

" disable various dumb keys
nnoremap <silent> <ESC>OA <NOP>
nnoremap <silent> <ESC>OB <NOP>
nnoremap <silent> <ESC>OC <NOP>
nnoremap <silent> <ESC>OD <NOP>
inoremap <silent> <ESC>OA <NOP>
inoremap <silent> <ESC>OB <NOP>
inoremap <silent> <ESC>OC <NOP>
inoremap <silent> <ESC>OD <NOP>
inoremap <silent> <ESC>OD <NOP>
inoremap <silent> <DEL> <NOP>
autocmd VimEnter * inoremap <silent> <BS> <NOP>

" timeout
set timeoutlen=200
